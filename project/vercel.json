{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/religion-buddhism", "destination": "/religion-buddhism.html" },
    { "source": "/religion-catholicism", "destination": "/religion-catholicism.html" },
    { "source": "/religion-protestantism", "destination": "/religion-protestantism.html" },
    { "source": "/religion-islam", "destination": "/religion-islam.html" },
    { "source": "/religion-caodaism", "destination": "/religion-caodaism.html" },
    { "source": "/religion-hoahao", "destination": "/religion-hoahao.html" },
    { "source": "/religion-folk", "destination": "/religion-folk.html" },
    { "source": "/religion-none", "destination": "/religion-none.html" }
  ],
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/icons/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
